<Window x:Class="WorldBattle.Instructions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldBattle"
        mc:Ignorable="d"
        Title="Instructions" MinHeight="700" MinWidth="1100" MaxHeight="700" MaxWidth="1100">
    <Window.Background>
        <ImageBrush ImageSource="/Poze/fundal.jpg"/>
    </Window.Background>

    <Grid x:Name="InstructionsGrid" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TitleRow" Height="44"></RowDefinition>
            <RowDefinition x:Name="ButtonRow" Height="100"/>
        </Grid.RowDefinitions>



        <TextBlock x:Name="GameRule" Text="Instructiuni" HorizontalAlignment="Center"  
                   Margin="102,10,546,58" TextWrapping="Wrap" 
                   VerticalAlignment="Center" Height="78" Width="452" 
                   FontSize="25" TextAlignment="Center" Grid.RowSpan="2" Foreground="White" FontWeight="Bold"/>


        <!--<Button x:Name="OpenInfo" Content="Game Rules" HorizontalAlignment="Left" Background="WhiteSmoke" Margin="42,25,0,0" VerticalAlignment="Top" Width="185" Height="46" FontSize="25" Click="GameRulesButton_Click" Style="{DynamicResource RoundedButton}" Opacity="0.6" FontFamily="Times New Roman" Grid.Row="1"/>-->

        <TextBox x:Name="Informatii" HorizontalAlignment="Left" Height="618" Margin="10,2.333,0,-519.667" TextWrapping="Wrap" Text="Pentru a juca WorldBattle este nevoie de doi jucatori, Host si Guest&#xA;Scopul jocului este de a elimina fortele adversarului prin calcularea pozitiei de pe tabla de joc&#xA;Host-ul este cel care genereaza jocul, prin alegerea unui mod de joc(3 moduri de joc disponibile: aviatie, navala si terestru);&#xA;&#x9;&#x9;-Guestul introduce IP-ul primit de la host pentru a intra in joc&#xA;Prepararea tablei de joc&#xA;&#x9;&#x9;-Fiecare jucator trebuie sa plaseze elementele armatei pe tabla sa de &#x9;&#x9;&#x9;joc(stanga);&#xA;&#x9;&#x9;-Elementele pot fi rotite prin click dreapta;&#xA;&#x9;&#x9;-Prin apasarea butonului READY se indica faptul ca jucatorul si-a terminat de aranjat elementele;&#xA;&#x9;&#x9;-Prin apasarea butonului UNDO, tabla de joc este resetata, iar jucatorul poate sa-si aranjeze din nou elementele;&#xA;&#x9;&#x9;-Pentru a plasa elementele(avioane, vapoare, tancuri, trupe) se apasa pe imaginea pe care dorim sa o asezam si se apasa pe tabla la ulterior, in locul dorit; &#x9;&#x9;&#x9;&#x9;&#xA;Modul de Lupta&#xA;&#x9;&#x9;-Fiecare jucator va lovi tabla oponentului pe rand pentru a distruge elementele adversarului&#xA;&#x9;&#x9;-o lovitura consta intr un click pe tabla oponentului:&#xA;&#x9;&#x9;&#x9;-In cazul in care nu am nimerit, runda se va termina;&#xA;&#x9;&#x9;&#x9;-In cazul in care am nimerit, mai avem dreptul la o noua lovitura;&#xA;&#x9;&#x9;&#x9; -La epuizarea loviturilor se apasa pe END TURN pentru a finaliza tura&#xA;&#x9;&#x9;-Jucatorul care doboara toata armata adversa castiga" 
                 Background="#A99B76" Opacity="0.8" FontSize="17" VerticalAlignment="Top" Width="706" BorderThickness="0" Grid.Row="1" IsReadOnly="True" FontWeight="Bold" />

        <!--<Button x:Name="buton" Content="Close" HorizontalAlignment="Left" Background="WhiteSmoke" Margin="891,560,0,-505" VerticalAlignment="Top" Width="185" Height="46" FontSize="25" Click="CloseButton_Click" Opacity="0.6" FontFamily="Times New Roman" Grid.Row="1"
                Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>-->

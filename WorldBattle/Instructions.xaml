            <Image x:Name="poza3" HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Source="/Poze/trupe1.png" Height="106" Width="165" Margin="-373,300,0,-361" RenderTransformOrigin="-0.061,1.981"/>
